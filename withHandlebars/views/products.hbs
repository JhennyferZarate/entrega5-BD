<div class="container" style="margin-top: 4rem">
    {{#if products}}
        <div class="table-responsive">
            <table class="table table-dark">
                <thead>
                    <tr style="color: white;"> 
                        <th>Nombre</th>
                        <th>Precio</th>
                        <th>Foto</th>
                    </tr>
                </thead>
                <tbody>
                    {{#if products.length}}
                        {{#each products}}
                            <tr>
                                <td>{{this.title}}</td>
                                <td>S/. {{this.price}}</td>
                                <td><img src={{this.thumbnail}} alt={{this.thumbnail}} style="max-width: 4rem"></td>
                            </tr>
                        {{/each}}
                    {{/if}}
                </tbody>
            </table>
        </div>
    {{else}}
        <h3 class="alert alert-danger">No se encontraron datos</h3>
    {{/if}}
</div>